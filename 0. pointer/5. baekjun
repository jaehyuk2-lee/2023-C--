#include <stdio.h>
#include <string>

int main() {
    int num, sum, cnt;
    char str[10][80];
    char *p_str[10];
    
    scanf("%d", &num);
    for(int i = 0; i < num; i++){
        scanf("%s", str[i][80]);
        p_str[i] = str[i];
    }
    
    for(int i = 0; i < num; i++){
        sum = 0;
        cnt = 0;
        for(int j = 0; j < 80; j++){
            if(p_str[i][j] = 'O'){
                cnt++;
                sum += cnt;
            }
            else cnt = 0;
        }
        printf("%d ", sum);
    }
}
