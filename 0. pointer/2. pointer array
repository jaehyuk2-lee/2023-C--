//포인터 배열: 포인터들이 배열의 요소 -> 포인터 개수 (배열의 개수) 
#include <stdio.h>

int main() {
    int *ptr[4];
    
    int a, b, c, d;
    a = 10;
    b = 20;
    c = 30;
    d = 40;
    
    ptr[0] = &a;
    ptr[1] = &b;
    ptr[2] = &c;
    ptr[3] = &d;
    
    for(int i = 0; i < 4; i++){
        printf("%d ", *ptr[i]);
    }
    printf("\n");
    
    int arr[4] = {1, 2, 3, 4};
    
    for(int i = 0; i < 4; i++){
        ptr[i] = arr + i; //&arr[i]
    }
    
    for(int i = 0; i < 4; i++){
        printf("%d ", *ptr[i]);
    }
}
