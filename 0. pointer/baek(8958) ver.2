#include <iostream>
#include<string.h>
using namespace std;

int main() {
	int C;
	cin >> C;
	
	for (int i = 0; i < C; i++) {
		char S[81];
		cin >> S;

		int len = strlen(S);
		int cnt = 0;
		int score = 0;
		for (int i = 0; i < len; i++) {
			if (S[i] == 'O') {
				cnt++;
				score += cnt;
			}
			else if (S[i] == 'X') {
				cnt = 0;
			}
		}
		cout << score << endl;
	}
}
