#include <iostream>
#include <string>
using namespace std;

int main() {
    int num, sum, cnt;
    string s;
    cin >> num;
    
    sum = cnt = 0;
    for(int i = 0; i < num; i++){
        cin >> s;
        if(s.length() > 0 && s.length() < 80){
            for(int i = 0; i < s.length(); i++){
                if(s[i] == 'O'){
                    cnt++;
                    sum += cnt;
                }
                else cnt = 0;
            }
            cout << sum << endl;
            sum = 0;
            cnt = 0;
        }
    }
    return 0;
}
