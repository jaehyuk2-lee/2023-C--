#include <iostream>
using namespace std;

int main() {
    int num, sum, cnt;
    cin >> num;
    for(int j = 0; j < num; j++){
        char str[80];
        cin >> str;
        sum = 0;
        cnt = 0;
        for(int i = 0; str[i]!='\0'; i++){
            if(str[i] == 'O'){
                cnt++;
                sum += cnt;
            }
            else cnt = 0;
        }
        cout << sum << endl;
    }
}
