#include <iostream>
using namespace std;

int main() {
    int num, sum, cnt;
    char str[10][80];
    
    cin >> num;
    for(int i = 0; i < num; i++){
        cin >> str[num][80];
    }
    
    for(int i = 0; i < num; i++){
        sum = 0;
        cnt = 0;
        for(int j = 0; j < 80; j++){
            if(str[i][j] == 'O'){
                ++cnt;
                sum += cnt;
            }
            else cnt = 0;
        }
        cout << sum << endl;
    }
}
