#include <iostream>
#include <memory>
using namespace std;

class Test{
public:
    Test() {
        cout << "생성자" << endl;
    }
    ~Test() {
        cout << "소멸자" << endl;
    }
};

int main() {
    cout << "main 시작" << endl;
    unique_ptr<Test> a(new Test);
    cout << "main 종료" << endl;
    //알아서 소멸
}

//메모리 소유권 : 메모리 해제 의무
