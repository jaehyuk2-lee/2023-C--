//허수 생성 프로그램
#include <iostream>

using namespace std;

class Complex {
public:
    Complex(){
        real=0; //실수
        imag=0; //허수
    }
    Complex(double real_, double imag_){
        real=real_;
        imag=imag_;
    }//overloading 사용 
    
    double GetReal(){
        return real;
    }
    void SetReal(double real_){
        real=real_;
    }
    double GetImag(){
        return imag;
    }
    void SetImag(double imag_){
        imag=imag_;
    }
    
private:
    double real;
    double imag;
};

int main(){
    Complex c1;//첫번째 형태라 0,0으로 초기화
    Complex c2=Complex(2,2);//두번째 생성자
    Complex c3(2,3);//두번째랑 같은 표현
    Complex c4 = {2,4};
    Complex c5 = Complex{2,5};
    Complex c6{2,6};
    
    cout << "c1 = " << c1.GetReal() << ", " << c1.GetImag() << endl;
    cout << "c2 = " << c2.GetReal() << ", " << c2.GetImag() << endl;
    cout << "c3 = " << c3.GetReal() << ", " << c3.GetImag() << endl;
    cout << "c4 = " << c4.GetReal() << ", " << c4.GetImag() << endl;
    cout << "c5 = " << c5.GetReal() << ", " << c5.GetImag() << endl;
    cout << "c6 = " << c6.GetReal() << ", " << c6.GetImag() << endl;
}
