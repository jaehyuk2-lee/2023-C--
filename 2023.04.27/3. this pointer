//this pointer
#include <iostream>

using namespace std;

class Myclass{
    public:
    void PrintThis(/*보이지 않는 this 매개변수 존재 소속 판단*/){
        cout<<"나의 주소는"<<this<<endl;
    }
};

int main(){
    Myclass a,b; //a와 b가 메모리에 할당 됨
    
    cout<<"&a: "<<&a<<endl;
    cout<<"&b: "<<&b<<endl;
    
    a.PrintThis();//this가 가르키는 a의 주소 출력
    b.PrintThis();//this가 가르키는 b의 주소 출력
} //함수 내부에서 this를 사용시 객체의 주소를 갖고 온다.
