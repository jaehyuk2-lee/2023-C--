};*/

class TV { //class는 기본적으로 private가 설정 되어 있다.
    bool powerOn;
    int channel;
    int volume;
    
public: //public을 별도로 설정 해야 한다.
    void on(){
        powerOn=true;
        cout<<"on"<<endl;
    }
    
    void off(){
        powerOn=false;
        cout<<"out"<<endl;
    }
    
    void setCh(int cnl){
        if(cnl>=1&&cnl<=999){
            channel=cnl;
            cout<<"Ch."<<cnl<<endl;
        }
    }
    
    void setVol(int vol){
        if(vol>=0&&vol<=100){
            volume=vol;
            cout<<"vol:"<<vol<<endl;
        }
    }
};

int main(){
    TV lg;
    lg.on();
    lg.setCh(10);
    lg.setVol(50);
    
    lg.setVol(-745);
} //class는 struct와 다르다
