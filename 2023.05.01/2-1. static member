//static member

#include <iostream>

using namespace std;

class Color {
public:
    Color() : r(0), g(0), b(0) {}
    Color(float r, float g, float b) : r(r), g(g), b(b) {}
    
    float GetR() {return r;}
    float GetG() {return g;}
    float GetB() {return b;}
    
    static Color MixColors (Color a, Color b) {
    return Color((a.r+b.r)/2, (a.g+b.g)/2, (a.b+b.b)/2);
    }//정적 선언 ~> class 안으로 넣었음, private에 접근 할 수 있음
     //따라서 선언한 Get함수 사용 안해도 됨
    
private:
    float r;
    float g;
    float b;
};



int main() {
    Color blue(0,0,1);
    Color red(1,0,0);
    Color purple = Color::MixColors(red, blue);//namespace처럼 사용
    //Color purple = blue.MixColors(red, blue); 이거도 됨
    
    cout << "r=" << purple.GetR()<< " g=" << purple.GetG()<< " b=" << purple.GetB() << endl;
}
