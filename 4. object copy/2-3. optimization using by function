#include <iostream>
#include <cstring>
using namespace std;

class String {
public:
    String() {
        cout << "String() 생성" << endl;
        strData = NULL;
        len = 0;
    }
    String(const char *str) {
        cout << "String(입력됨) 생성" << endl;
        len = strlen(str);
        alloc(len);
        strcpy(strData, str);
    }
    
    String(const String &rhs) {
        len = rhs.len;
        alloc(len);
        strcpy(strData, rhs.strData);
    }
    
    String &operator=(const String &rhs) {
        if(this != &rhs){
            len = rhs.len;
            release();
            alloc(len);
            strcpy(strData, rhs.strData);
        }
        
    return *this;
    }
    
    ~String() {
        cout << "String() 소멸" << endl;
        release();
        strData = NULL;

    }
    
    char *GetStrData() const {return strData;}
    int GetLen() const {return len;}

private:
    void alloc(const int len) {
        strData = new char[len + 1];
        cout << "strData 주소 할당 : " << (void*)strData << endl;
    }
    void release() {
        if(strData) {
            cout << "strData 주소 할당해제 : " << (void*)strData << endl;
            delete[] strData;
        } //strData에 값이 들어 있다면
    }
    
    char *strData;
    int len;
};

String getName() {
    cout << "====2====" << endl;
    String res("JaH");
    cout << "====3====" << endl;
    return res;
}

int main() {
    String a;
    cout << "====1====" << endl;
    a = getName();
    cout << a.GetStrData() << endl;
    cout << "====4====" << endl;
}
