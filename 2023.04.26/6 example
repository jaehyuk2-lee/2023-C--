//모범 답안
#include <iostream>

using namespace std;

int main() {
    int arr[2][3] = {{1,2,3},{4,5,6}};
    
    for(int(&ln)[3]:arr){
        for(int&col : ln){
            cout<<col<<' ';
        }
        cout<<endl;
    }
    
    cout<<endl;
    
//for문 식 구성    
    for(int (*ln)[3]=arr; ln <arr + 2; ln++){
        for(int *col = *ln; col<*ln+3; col++){
            cout<<*col<<' ';
        }
        cout<<endl;
    }
}
