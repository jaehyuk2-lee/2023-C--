#include <iostream>

using namespace std;

int main()
{
    int a(10); //int a=10;
    int b(a+5);
    
    cout<<"a = "<<a<<endl;
    cout<<"b = "<<b<<endl;
    
    int arr[10]={3,1,4,9,1,5,9,2,6,5};
    
    for(int i=0;i<10; i++){
        cout<<arr[i]<<' ';
    }
    cout<<endl;
    
    //범위 기반 for문
    
    for(int n : arr){
        cout<<n<<' ';
    }
    cout<<endl;
    
    //레퍼런스 변수 사용시 내용 수정 가능
    for(int &n : arr){
        n++;
        cout<<n<<' ';
    }
}
